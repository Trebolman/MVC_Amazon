@model IEnumerable<MVC_Amazon.Models.BookResponse>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Responses</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body class="panel-body">
    <h2>Lista de Libros en Amazon</h2>
    <table class="table table-sm table-striped table-bordered">
        <thead>
            <tr>
                <th>ISBN</th>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>NroPages</th>
            </tr>
        </thead>
        <tbody>
            @foreach (MVC_Amazon.Models.BookResponse book in Model)
            {
                <tr>
                    @* El signo de interrogacion dice que si es nulo, el codigo siguiente no se ejecute *@
                    <td>@(book?.ISBN?? "ISB no establecido")</td>
                    <td>@(book?.Title?? "ISB no establecido")</td>
                    <td>@(book?.Author?? "Titulo no establecido")</td>
                    <td>@(book?.Price?? 0)</td>
                    <td>@(book?.NroPages?? 0)</td>
                </tr>
            }
        </tbody>
    </table>

    <h1>@($"Precio total de los libros es de: {ViewBag.TotalPrice:c2}")</h1>
</body>
</html>